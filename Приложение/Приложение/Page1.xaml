<Page x:Class="Приложение.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Приложение"
      mc:Ignorable="d"
      Title="Page1" Height="300" Width="698.761">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="Razg" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="Razg_SelectionChanged" Margin="0,0,0,73">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Разговора" Binding="{Binding ID_Разговора}" Width="*"/>
                <DataGridTextColumn Header="Номер Города" Binding="{Binding Номер_Города}" Width="*"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Телефон}" Width="*"/>
                <DataGridTextColumn Header="Дата Разговора" Binding="{Binding Дата_Разговора}" Width="*"/>
                <DataGridTextColumn Header="Продолжительность" Binding="{Binding Продолжительность}" Width="*"/>
                <DataGridTextColumn Header="Состояние оплаты" Binding="{Binding Состояние_Оплаты}" Width="*"/>
                <DataGridTemplateColumn Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
